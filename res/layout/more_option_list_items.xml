<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/black" android:paddingTop="10dp">
	<LinearLayout
		android:id="@+id/linerList"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/more_list_row_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="6dp"/>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_height="fill_parent">
			<TextView
				android:id="@+id/more_list_row_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="center_vertical"
				android:textSize="20sp"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:textColor="@color/white" />
			<TextView
				android:id="@+id/more_list_row_details"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:textSize="14sp"
				android:textColor="@color/light_gray" />
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="@color/light_gray" android:layout_marginTop="10dp"/>
</LinearLayout>